{
  "name": "lotus-language-support",
  "displayName": "Lotus Language Support",
  "description": "This is the extension to add support for the Lotus programming language",
  "version": "0.0.6",
  "publisher": "PontusHenriksson",
  "icon": "./media/logo/lotus-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/BreakerLabs/LLS-vscode"
  },
  "keywords": [
    "lotus",
    "lotus extension",
    "lotusLang",
    "LLS",
    "Programming language",
    "Lotus language",
    "lotus compiler"
  ],
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "lotus",
        "path": "./syntaxes/snippets/lotus-snippets.json"
      },
      {
        "language": "lotus",
        "path": "./syntaxes/snippets/lotus-debug-snippets.json"
      }
    ],
    "languages": [
      {
        "id": "lotus",
        "aliases": [
          "Lotus",
          "lotus",
          "lotusLang",
          "LLS"
        ],
        "extensions": [
          ".lotus",
          ".lts"
        ],
        "icon": {
          "light": "./media/logo/lotus-icon.png",
          "dark": "./media/logo/lotus-icon.png"
        },
        "configuration": "./language-configuration.json"
      },
      {
        "id": "lotusUtiltities",
        "aliases": [
          "lotusUtiltities",
          "lotusUtils",
          "Lts utils",
          "Lotus Utilities"
        ],
        "extensions": [
          ".ltsu"
        ],
        "icon": {
          "light": "./media/logo/lotus-utilities-icon.png",
          "dark": "./media/logo/lotus-utilities-icon.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lotus",
        "scopeName": "source.lotus",
        "path": "./syntaxes/lotus.tmLanguage.json"
      },
      {
        "language": "lotusUtilities",
        "scopeName": "source.lotus",
        "path": "./syntaxes/lotus.tmLanguage.json"
      }
    ]
  }
}
